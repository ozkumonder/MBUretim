@model List<MBUretim.Mvc.Models.MBGOP_Params>
@{
    ViewBag.Title = "Params";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int counter = 0;
}

<div class="page-header page-header-default">
    <div class="page-header-content">
        <div class="page-title">
            <h4>
                <i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">
                    Parametreler
                </span>
            </h4>
        </div>
    </div>
</div>
<!-- /page header -->
<!-- Content area -->
<div class="content">
    <!-- Basic layout -->
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h6 class="panel-title">Parametre</h6>

        </div>
        <div class="panel-body">
            <div class="row" style="padding-left: 20px;">
                @foreach (var item in Model)
                {
                    <div class="col-md-12">
                        <div class="col-md-10" style="min-height: 32px; padding-top: 10px;">
                            @item.ParamName
                        </div>
                        <div class="col-md-2">
                            <input type="checkbox" id="paramcheck" class="switch" data-on-text="Evet" data-size="mini" data-off-text="Hayır" data-on-color="success" data-off-color="default" readonly="readonly" checked="@item.ParamValue">
                        </div>
                    </div>
                    <hr />
                }

            </div>
            <hr />
            <div class="row">
                <div class="col-xs-6">
                </div>
                <div class="col-xs-6 text-right">
                    <a href="@Url.Action("EditParams","ManageParams")" id="parameterUpdate" class="btn bg-teal-400 btn-labeled btn-labeled-right"><b><i class="icon-circle-right2"></i></b>Düzenle</a>
                    <br /><br />
                </div>
                <div class="col-xs-6 text-right">
                    <button type="button" class="btn bg-teal-400 btn-labeled btn-labeled-right"><b><i class="icon-circle-right2"></i></b>Kaydet</button>
                    <br /><br />
                </div>
            </div>
        </div>
    </div>
    <!-- /basic layout -->

</div>
<!-- /content area -->
